<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getString"/>

        <Button
            android:id="@+id/btn_json_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="getJsonArray"/>

        <Button
            android:id="@+id/btn_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loadimgs"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_imgloader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="imgloader"/>

        <Button
            android:id="@+id/btn_network_imgloader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="networkimgloader"/>

        <Button
            android:id="@+id/btn_xml_parser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xmlparser"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/network_img_view"
        android:layout_width="200dp"
        android:layout_height="200dp"

        />
</LinearLayout>
